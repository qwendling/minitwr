extends layout

block content
        
  header
    nav.navbar.navbar-inverse.navbar-fixed-top
      .container-fluid
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
            span.sr-only Toggle navigation 
            span.icon-bar
            span.icon-bar   
            span.icon-bar
          a.navbar-brand(href='/home') MiniTwr
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
          ul.nav.navbar-nav
            li.active
              a(href='http://9gag.com/')
                | link 
                span.sr-only (current) 
          ul.nav.navbar-nav.navbar-right
            li
              a(href='/messages') Chat
            li
              a(href='/home') Notifications
            li
              a(href='/') Deconnection

      

  form(action='/home', method='POST')      
    .input-group.col-lg-6.noflo
      input.form-control(name="tweet", type='text', placeholder="What's up")
      |       
      span.input-group-btn
        button.btn.btn-default(type='submit') Tweet
  ul
    - each tweet in tweets
      .row
        .col-sm-3.col-xs-0
        .col-sm-6.col-xs-12
          .panel.panel-info
            .panel-heading
              span= tweet.pseudo
                .panel-body
                  li
                    span= tweet.content
                .panel-footer
                  span=tweet.time

      
  .fil
    p

