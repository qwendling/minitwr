extends layout

block content
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				h1.text-center.login-title Connexion
					div.account-wall
						form(class='form-signin', action='/pseudo', method='POST')
							input(type='text', name='pseudo' class='form-control', placeholder='Pseudo',required, autofocus)
							button(class='btn btn-lg btn-primary btn-block', type='submit') Connexion
							span.clearfix
					#message
					if message
						h1.text-center.error-message #{message}
